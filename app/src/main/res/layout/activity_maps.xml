<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MapsActivity">


<androidx.fragment.app.FragmentContainerView
    android:id="@+id/map"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapsActivity"
    map:layout_constraintTop_toTopOf="parent"
    map:layout_constraintLeft_toLeftOf="parent"
    map:layout_constraintRight_toRightOf="parent"
    map:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:id="@+id/senMessageButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send Location"
        android:layout_margin="100dp"
        map:layout_constraintTop_toTopOf="@id/map"
        map:layout_constraintLeft_toLeftOf="@id/map"
        map:layout_constraintRight_toRightOf="@id/map"
        map:layout_constraintBottom_toBottomOf="@id/map"/>

    <Button
        android:id="@+id/btnRecord"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="record"
        map:layout_constraintLeft_toLeftOf="parent"
        map:layout_constraintRight_toLeftOf="@id/btnStop"
        map:layout_constraintBottom_toBottomOf="parent"
        />
    <Button
        android:id="@+id/btnStop"
        android:layout_width="0dp"
        android:layout_margin="5dp"
        android:text="stop"
        android:layout_height="wrap_content"
        map:layout_constraintRight_toLeftOf="@id/playBtn"
        map:layout_constraintLeft_toRightOf="@id/btnRecord"
        map:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:id="@+id/playBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="play"
        map:layout_constraintRight_toRightOf="parent"
        map:layout_constraintLeft_toRightOf="@id/btnStop"
        map:layout_constraintBottom_toBottomOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>
